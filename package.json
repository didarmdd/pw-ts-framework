{
  "name": "pw-ts-framework",
  "version": "1.0.0",
  "private": true,
  "description": "Playwright + TypeScript UI and API automation framework starter",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --project=ui-chromium",
    "test:api": "playwright test --project=api",
    "test:e2e": "playwright test --project=ui-chromium -g @e2e",
    "test:smoke": "playwright test -g @smoke",
    "report": "playwright show-report artifacts/playwright-report",
    "lint": "eslint .",
    "format": "prettier -w .",
    "auth:state": "node ./scripts/create-storage-state.mjs",
    "allure:generate": "allure generate artifacts/allure-results -o artifacts/allure-report --clean",
    "allure:open": "allure open artifacts/allure-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.3",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}
